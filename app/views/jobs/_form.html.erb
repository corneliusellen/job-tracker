<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <select name="category">
    <%= categories_array = Category.all.map { |category| [category.name, category.id]} %>
    <%= options_for_select(categories_array) %>
  </select>

  <%= f.submit %>
<% end %>
